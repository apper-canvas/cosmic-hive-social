{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/post/:postId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Post details are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/r/:communityName": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Community pages are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/user/:username": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User profiles are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/create": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to create posts",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}